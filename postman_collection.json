{
    "info": {
        "_postman_id": "coopcredit-collection",
        "name": "CoopCredit Application Service",
        "description": "API Collection for CoopCredit Service",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"analyst1\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Affiliates",
            "item": [
                {
                    "name": "Create Affiliate",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"document\": \"123456789\",\n    \"name\": \"John Doe\",\n    \"salary\": 5000.00,\n    \"affiliationDate\": \"2023-01-01\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/affiliates",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "affiliates"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Applications",
            "item": [
                {
                    "name": "Create Application",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"affiliateId\": 1,\n    \"requestedAmount\": 10000.00,\n    \"termMonths\": 12,\n    \"interestRate\": 10.0\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/credit-applications",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "credit-applications"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Pending",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/credit-applications/pending",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "credit-applications",
                                "pending"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Evaluation",
            "item": [
                {
                    "name": "Evaluate Application",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/evaluations/1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "evaluations",
                                "1"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8080/api"
        },
        {
            "key": "token",
            "value": ""
        }
    ]
}